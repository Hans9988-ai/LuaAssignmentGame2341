-- #2

print ("Enter the first Numebr")
num1 = tonumber (io.read ())

while num1 == nil do
    print ("That's not a number, try agian!")
    num1 = tonumber (io.read())
end

print("Enter the secon number")
num2 = tonumber(io.read())

while num2 == nil do
    print (That's not a number, try again!")
    num2 = tonumber (io.read())
end

total = num1 + num2
print("The total is " .. total)

-- #3

local total = 0

print("Enter numbers to add together.")
print("Type 'done' when you are finished.")

while true do
    local input = io.read()

    if input == "done" then
        break
    end

    local number = tonumber(input)

    if number ~= nil then
        total = total + number
    else
        print("Please enter a valid number.")
    end
end

print("The total is: " .. total)

-- #4

math.randomseed(os.time())

while true do
    print("Enter a maximum number:")
    local maxInput = io.read()
    local maxNumber = tonumber(maxInput)

    if maxNumber == nil or maxNumber < 0 then
        print("Please enter a valid positive number.")
    else
        local randomNumber = math.random(0, maxNumber)
        print("Random number: " .. randomNumber)
    end

    print("Play again? (yes/no)")
    local answer = io.read()

    if answer ~= "yes" then
        break
    end
end

print("Goodbye!")